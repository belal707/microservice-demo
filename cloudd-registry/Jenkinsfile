node 
{
  checkout scm
  stage('Package') 
  {
     sh 'mvn clean package -DskipTests'
  }
  stage('Create Docker Image') 
  {
    docker.build("belalansari/testapi:${env.BUILD_NUMBER}")
  }
  stage('Run Tests') 
  {
    try 
	{  
		sh "mvn test"
        docker.build("belalansari/testapi:${env.BUILD_NUMBER}").push()
    } catch (error)
	{

    } finally 
	{
     // junit '**/target/surefire-reports/*.xml'
    }
  }
}
